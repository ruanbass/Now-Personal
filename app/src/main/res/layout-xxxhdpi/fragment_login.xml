<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_mail_login"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="textEmailAddress"
            android:hint="@string/hint_mail"
            android:id="@+id/login_mail"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_password_login"
        android:layout_marginTop="@dimen/min_margin"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxEms="16"
            android:inputType="textPassword"
            android:hint="@string/hint_password"
            android:id="@+id/login_password"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_button_height"
        android:background="@drawable/raised_button_amber"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/btn_login"
        android:textAllCaps="true"
        android:id="@+id/btn_login"
        android:padding="@dimen/min_margin"
        android:textColor="@color/md_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_button_height"
        android:background="?attr/selectableItemBackground"
        android:layout_marginTop="@dimen/med_margin"
        android:text="@string/remember_password"
        android:textAllCaps="false"
        android:id="@+id/btn_remember_pasword"
        android:padding="@dimen/min_margin"
        android:textColor="@color/md_secondary_text_icons"/>

</LinearLayout>
